include ../mixins/navigationChapterThumbnails

#sidebar
  img(src="../img/id/logo.svg" class="nav-logo")
  #chapters
    - const ch00 = { number: "Capítulo 00", title: "Prólogo" }
    +chapter("ch00", ch00, 16)

    - const ch01 = { number: "Capítulo 01", title: "Em breve..." }
    +chapter("ch01", ch01, 1)
  nav.mainNavigation
    img(src="../img/nav/prev.png" onClick="prevPage()")
    img(src="../img/nav/next.png" onClick="nextPage()")
    img(src="../img/nav/top.png")
    img(src="../img/nav/sound_on.png" onClick="playAudio()")
    