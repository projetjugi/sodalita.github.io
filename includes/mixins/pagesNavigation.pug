mixin chapterPages(totalPages, pagesChapter)
  if totalPages == 0
    .pages_blank
      p Capítulo em desenvolvimento.
      p Aguarde a próxima atualização.
      p ;)
  else if totalPages > 0
    .pages
      .pages__title Páginas
      .pages__nav
        - var n = 1;

        while n <= totalPages

          - var p = n++

          if p == 1
            a(href="/html/index.html")
              img(src="../img/chapters/" + pagesChapter + "/pg0" + p +"/thumbnail.png")
          else if p < 10
            a(href="/html/pg0" + p + ".html")
              img(src="../img/chapters/" + pagesChapter + "/pg0" + p +"/thumbnail.png")
          else if p >= 10
            a(href="/html/pg" + p + ".html")
              img(src="../img/chapters/" + pagesChapter + "/pg" + p +"/thumbnail.png")