mixin chapter(chapterNumber, chapterDetails)
  .chapter
    .chapter__img
      img(src="../img/chapters/" + chapterNumber + "/thumbnail.png")
    .chapter__details
      .chapter__details__number= chapterDetails.number
      .chapter__details__title= chapterDetails.title

#sidebar
  img(src="../img/id/logo.svg")
  #chapters
    - const ch00 = { number: "Capítulo 00", title: "Prólogo" }
    +chapter("ch00", ch00)
    - const ch01 = { number: "Capítulo 01", title: "Quando o queijo acaba" }
    +chapter("ch01", ch01)
  nav
    a(href="#")
      img(src="../img/nav/prev.png")
    a(href="#")
      img(src="../img/nav/next.png")
    a(href="#")
      img(src="../img/nav/top.png")
    a(href="#")
      img(src="../img/nav/sound_on.png")